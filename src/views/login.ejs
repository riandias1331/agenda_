<%- include('includes/head')%>
<%- include('includes/nav')%>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 " style="margin-top: 20px;">
            <h1 class="display-1 text-center ">Create or Login </h1>
            <p class="text-center lead">Faça login ou Crie sua conta</p>

            <%- include('includes/messages');  %>

            <di class="row">
                <div class="col-lg">
                    <h4>Faça seu cadastro</h4>
                    <form action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value= <%= csrfToken %>>
                        <div class="form-group">
                          <label for="exampleInputEmail1">Email address</label>
                          <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Create email">
                        </div>
                       
                        <div class="form-group">
                          <label for="exampleInputEmail1">Password</label>
                          <input type="password" name="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Create password">
                        </div>
                       
                        <button type="submit" class="btn btn-primary" style="margin-top: 10px;cursor: pointer;">Create a account</button>
                      </form>
                </div>


                <div class="col-lg">
                    <h4>Entrar no sistema</h4>
                    <form action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value= <%= csrfToken %>>
                        <div class="form-group">
                          <label for="exampleInputEmail1">Email address</label>
                          <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                       
                        <div class="form-group">
                          <label for="exampleInputEmail1">Password</label>
                          <input type="password" name="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Password">
                        </div>
                       
                        <button type="submit" class="btn btn-primary" style="margin-top: 10px;cursor: pointer;">Enter a account</button>
                      </form>
                </div>
            </di>
        </div>



        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer')%>
   


